{
	"name": "bitburner-scripts",
	"author": {
		"name": "Vlad Zaharia",
		"email": "hey@vlad.gg"
	},
	"dependencies": {
		"typescript": "^4.7.2"
	},
	"devDependencies": {
		"bitburner-sync": "^1.5.2",
		"replace-in-file": "^6.3.3"
	},
	"scripts": {
		"postinstall": "npm run postinstall:defs && npm run postinstall:config",
		"postinstall:defs": "node ./scripts/update_defs.js",
		"postinstall:config": "node ./scripts/retrieve_config.js",
		"build": "npm run clean && gulp compile",
		"build:watch": "gulp watch",
		"build:sync-watch": "gulp watch-sync",
		"clean": "rm -rf out/*",
		"sync": "bitburner-sync",
		"sync:watch": "bitburner-sync --watch"
	}
}