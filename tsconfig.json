{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ES2020",
        "rootDir": "src/",
        "baseUrl": "src/",
        "paths": {
            "/helpers/*": [
                "helpers/*"
            ],
            "/lib/*": [
                "lib/*"
            ]
        },
        "outDir": "out/",
        "moduleResolution": "node",
        "strictNullChecks": true,
        "strictPropertyInitialization": true
    }
}